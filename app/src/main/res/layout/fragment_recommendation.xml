<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.recommendation.RecommendationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view2"
            android:layout_width="371dp"
            android:layout_height="510dp"
            android:background="@drawable/white_box_with_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/recommendationMusic"
            android:layout_width="170dp"
            android:layout_height="79dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:autoSizeMaxTextSize="17dp"
            android:autoSizeMinTextSize="16dp"
            android:autoSizeTextType="uniform"
            android:text="Recommending..."
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:translationZ="90dp"
            app:layout_constraintStart_toEndOf="@+id/listenMusciPic"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/addRecommMusicBtn"
            android:layout_width="102dp"
            android:layout_height="58dp"
            android:layout_marginStart="11dp"
            android:backgroundTint="#40FF7F"
            android:text="Set as goal"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/recommendationMusic"
            app:layout_constraintStart_toEndOf="@+id/recommendationMusic"
            app:layout_constraintTop_toTopOf="@+id/recommendationMusic"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Cancel"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/recommendationMovie" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Recommendations:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="215dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:text="Your mood detected is :"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="italic"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/inputMood"
            android:layout_width="152dp"
            android:layout_height="39dp"
            android:layout_marginTop="44dp"
            android:autoSizeTextType="uniform"
            android:text="..."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/recommendationMovie"
            android:layout_width="170dp"
            android:layout_height="79dp"
            android:layout_marginStart="8dp"
            android:autoSizeMaxTextSize="17dp"
            android:autoSizeMinTextSize="16dp"
            android:autoSizeTextType="uniform"
            android:text="Recommending..."
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />

        <Button
            android:id="@+id/addRecommMovieBtn"
            android:layout_width="102dp"
            android:layout_height="58dp"
            android:layout_marginStart="11dp"
            android:backgroundTint="#40FF7F"
            android:text="Set as goal"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/recommendationMovie"
            app:layout_constraintStart_toEndOf="@+id/recommendationMovie"
            app:layout_constraintTop_toTopOf="@+id/recommendationMovie"
            app:strokeWidth="2dp" />

        <View
            android:id="@+id/view"
            android:layout_width="370dp"
            android:layout_height="102dp"
            android:background="@drawable/gradient_background1"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="371dp"
            android:layout_height="410dp"
            android:background="@drawable/gradient_background"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/goToGoalLink"
            android:layout_width="216dp"
            android:layout_height="28dp"
            android:layout_marginTop="24dp"
            android:text="Click here to set your own goal"
            android:textColor="#5E5E5E"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/cancelBtn" />

        <ImageView
            android:id="@+id/listenMusciPic"
            android:layout_width="66dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/listen_music_icon"
            app:layout_constraintBottom_toBottomOf="@+id/recommendationMusic"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/recommendationMusic"
            app:layout_constraintVertical_bias="0.445" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="62dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/watch_movie_icon"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/listenMusciPic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>