<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<!--    <TextView-->
<!--        android:id="@+id/textView31"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="3dp"-->
<!--        android:background="@color/black" />-->

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myUsername"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <ImageView-->
<!--            android:id="@+id/myBookmarkIcon"-->
<!--            android:layout_width="37dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginLeft="52dp"-->
<!--            android:layout_marginTop="4dp"-->
<!--            app:srcCompat="@drawable/bookmark_border_24" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/myPostDate"
        android:layout_width="156dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:text="Post Date"
        android:textColor="#8C8C8C"
        app:layout_constraintBottom_toBottomOf="@+id/userName"
        app:layout_constraintStart_toEndOf="@+id/userName"
        app:layout_constraintTop_toTopOf="@+id/userName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/myPostDetails"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:paddingBottom="15dp"
        android:text="Post Details"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />


    <ImageView
        android:id="@+id/myPostImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/postDetails"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/myCommentIcon"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/comment_icon" />

        <TextView
            android:id="@+id/myCommentCount"
            android:layout_width="135dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:text="comments number"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/commentIcon"
            app:layout_constraintStart_toEndOf="@+id/commentIcon"
            app:layout_constraintTop_toTopOf="@+id/commentIcon"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/horizontalDotSetting"
            android:layout_width="52dp"
            android:layout_height="36dp"
            android:layout_marginLeft="165dp"
            app:srcCompat="@drawable/more_horiz_24" />
    </LinearLayout>

<!--    <TextView-->
<!--        android:id="@+id/textView27"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="20dp"-->
<!--        android:background="@color/grey" />-->


</LinearLayout>