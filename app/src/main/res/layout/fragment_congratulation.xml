<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.goals.CongratulationFragment">

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerInParent="true">-->

        <View
            android:id="@+id/congratView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="87dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/congrat_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.367" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/congratulationAnimation"
            android:layout_width="231dp"
            android:layout_height="190dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/congratView"
            app:layout_constraintStart_toStartOf="@+id/congratView"
            app:layout_constraintTop_toTopOf="@+id/congratView"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/congratulation" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/congratulationGreet"
            android:layout_width="374dp"
            android:layout_height="190dp"
            android:layout_marginTop="152dp"
            app:layout_constraintEnd_toEndOf="@+id/congratView"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="@+id/congratView"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/greetingscongratulations" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/goodRabbit"
            android:layout_width="312dp"
            android:layout_height="264dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="@+id/congratView"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/congratView"
            app:layout_constraintTop_toTopOf="@+id/congratView"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/goodrabbit" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/tick"
            android:layout_width="231dp"
            android:layout_height="176dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="@+id/congratView"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/congratView"
            app:layout_constraintTop_toTopOf="@+id/congratView"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/tick" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/nice"
            android:layout_width="370dp"
            android:layout_height="211dp"
            android:layout_marginTop="144dp"
            app:layout_constraintEnd_toEndOf="@+id/congratView"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@+id/congratView"
            app:layout_constraintTop_toTopOf="@+id/congratulationAnimation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/excellent" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cheering"
            android:layout_width="277dp"
            android:layout_height="212dp"
            android:layout_marginTop="112dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cheering" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/great"
            android:layout_width="370dp"
            android:layout_height="177dp"
            app:layout_constraintEnd_toEndOf="@+id/congratView"
            app:layout_constraintStart_toStartOf="@+id/congratView"
            app:layout_constraintTop_toTopOf="@+id/congratulationAnimation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/great" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/celebrate"
            android:layout_width="323dp"
            android:layout_height="294dp"
            app:layout_constraintEnd_toEndOf="@+id/congratView"
            app:layout_constraintStart_toStartOf="@+id/congratView"
            app:layout_constraintTop_toTopOf="@+id/congratulationAnimation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/celebrate" />


        <Button
            android:id="@+id/okCongratBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="312dp"
            android:text="OK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.467"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/congratView" />

<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>